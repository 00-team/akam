{
    "$schema": "http://json-schema.org/schema",
    "title": "Locale",
    "description": "Akam locale schema",

    "type": "object",
    "additionalProperties": false,

    "$defs": {
        "description": {
            "type": ["string", "array"],
            "items": {
                "type": "string"
            }
        },
        "colored": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "sentence": {
                    "type": "string"
                },
                "word": {
                    "type": "string"
                }
            },
            "required": ["sentence", "word"]
        },
        "about_card": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "$ref": "#/$defs/description"
                }
            },
            "required": ["title", "description"]
        },
        "selling_card": {
            "$ref": "#/$defs/about_card"
        }
    },

    "properties": {
        "label": {
            "minLength": 1,
            "examples": ["English", "Persian"],
            "description": "Label of the content language",
            "type": "string"
        },
        "direction": {
            "enum": ["rtl", "ltr"],
            "default": "ltr",
            "type": "string"
        },
        "Navbar": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "home": {
                    "type": "string"
                },
                "about": {
                    "type": "string"
                },
                "services": {
                    "type": "string"
                },
                "contact": {
                    "type": "string"
                }
            },
            "required": ["home", "about", "services", "contact"]
        },
        "Home": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "hero": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "motto": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "sentence": {
                                    "type": "string"
                                },
                                "words": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 2,
                                    "uniqueItems": true
                                }
                            },
                            "required": ["sentence", "words"]
                        },
                        "title": {
                            "$ref": "#/$defs/colored"
                        },
                        "description": {
                            "$ref": "#/$defs/description"
                        },
                        "buttons": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "about": {
                                    "$ref": "#/$defs/colored"
                                },
                                "collaboration": {
                                    "type": "string"
                                }
                            },
                            "required": ["about", "collaboration"]
                        }
                    },
                    "required": ["motto", "title", "description", "buttons"]
                },
                "about": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "doom": {
                            "$ref": "#/$defs/colored"
                        },
                        "title": {
                            "type": "string"
                        },
                        "trust": {
                            "$ref": "#/$defs/about_card"
                        },
                        "trust2": {
                            "$ref": "#/$defs/about_card"
                        },
                        "trust3": {
                            "$ref": "#/$defs/about_card"
                        },
                        "innovation": {
                            "$ref": "#/$defs/about_card"
                        },
                        "card_button": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "doom",
                        "title",
                        "trust",
                        "trust2",
                        "trust3",
                        "innovation",
                        "card_button"
                    ]
                },
                "selling": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "doom": {
                            "$ref": "#/$defs/colored"
                        },
                        "title": {
                            "type": "string"
                        },
                        "marketing": {
                            "$ref": "#/$defs/selling_card"
                        },
                        "marketing2": {
                            "$ref": "#/$defs/selling_card"
                        },
                        "business_strategy": {
                            "$ref": "#/$defs/selling_card"
                        },
                        "card_button": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "doom",
                        "title",
                        "marketing",
                        "marketing2",
                        "business_strategy",
                        "card_button"
                    ]
                },
                "contact": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "doom": {
                            "$ref": "#/$defs/colored"
                        },
                        "title": {
                            "type": "string"
                        },
                        "gmail": {
                            "type": "string"
                        },
                        "fax": {
                            "type": "string"
                        },
                        "phone": {
                            "type": "string"
                        },
                        "location": {
                            "type": "string"
                        },
                        "button": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "doom",
                        "title",
                        "gmail",
                        "fax",
                        "phone",
                        "location",
                        "button"
                    ]
                }
            },
            "required": ["hero", "about", "selling", "contact"]
        }
    },
    "required": ["label", "Home", "Navbar"]
}
