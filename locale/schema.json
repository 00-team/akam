{
    "$schema": "http://json-schema.org/schema",
    "title": "Akam content",
    "description": "Full contnet of Akam website",
    "type": "object",

    "required": ["label", "Home"],

    "properties": {
        "label": {
            "minLength": 1,
            "examples": ["English", "Persian"],
            "description": "Label of the content language",
            "type": "string"
        },
        "direction": {
            "enum": ["rtl", "ltr"],
            "default": "ltr",
            "type": "string"
        },

        "Home": {
            "type": "object",
            "properties": {
                "hero": {
                    "type": "object",
                    "properties": {
                        "motto0": {
                            "type": "object",
                            "properties": {
                                "sentence": {
                                    "type": "string"
                                },
                                "words": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 2
                                }
                            },
                            "required": ["sentence", "words"]
                        },
                        "motto": {
                            "type": "string"
                        }
                    },
                    "required": ["motto0", "motto"]
                }
            },
            "required": ["hero"]
        }
    }
}
