{
    "$schema": "http://json-schema.org/schema",
    "title": "Locale",
    "description": "Akam locale schema",

    "type": "object",
    "additionalProperties": false,

    "$defs": {
        "description": {
            "type": ["string", "array"],
            "items": {
                "type": "string"
            }
        }
    },

    "properties": {
        "label": {
            "minLength": 1,
            "examples": ["English", "Persian"],
            "description": "Label of the content language",
            "type": "string"
        },
        "direction": {
            "enum": ["rtl", "ltr"],
            "default": "ltr",
            "type": "string"
        },
        "Navbar": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "home": {
                    "type": "string"
                },
                "about": {
                    "type": "string"
                },
                "services": {
                    "type": "string"
                },
                "contact": {
                    "type": "string"
                }
            },
            "required": ["home", "about", "services", "contact"]
        },
        "Home": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "hero": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "motto": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "sentence": {
                                    "type": "string"
                                },
                                "words": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 2,
                                    "uniqueItems": true
                                }
                            },
                            "required": ["sentence", "words"]
                        },
                        "title": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "sentence": {
                                    "type": "string"
                                },
                                "company": {
                                    "type": "string"
                                }
                            },
                            "required": ["sentence", "company"]
                        },
                        "description": {
                            "$ref": "#/$defs/description"
                        }
                    },
                    "required": ["motto", "title", "description"]
                },
                "about": {
                    "type": "string"
                }
            },
            "required": ["hero", "about"]
        }
    },
    "required": ["label", "Home", "Navbar"]
}
